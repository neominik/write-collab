    "nanoid": "^5.0.7",
    "@hocuspocus/server": "^3.2.3",
    "@hocuspocus/extension-logger": "^3.2.3",
    "@hocuspocus/provider": "^3.2.3",
    "yjs": "^13.6.19"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.4"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "packageManager": "pnpm@9.7.1"
